<!-- section/show-->
<% if @section.has_sidebar %>
	<div id='sidebar_div' class='span-3'>
		<ul class='sidebar_list'>
		<% for page in @section.pages %>
			<li><%= link_to "#{page.name}", :remote => true, :update=>'show_page', :url => { :controller=>'pages',:action=>'show_page', :id=>page.id }, :html=>{} %></li>
			<hr/>
		<% end %>
		</ul>
	</div>
<% end %>
<div id='show_page' <% if @section.has_sidebar %>class='span-18 last vert_divider'<% end %>>
	<%= render :partial => 'pages/show', :locals => { :page=>@page } %>
</div>