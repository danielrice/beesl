<!-- section/show -->
<% if @section.has_sidebar %>
	<div id='sidebar_div' class='span-3'>
		<ul class='sidebar_list'>
		<% for page in @section.pages %>
			<li><%= link_to "#{page.name}", page, :remote => true %></li>
			<hr/>
		<% end %>
		</ul>
	</div>
<% end %>

<% unless @page.nil? %>
	<div id='show_page' <% if @section.has_sidebar %>class='span-18 last vert_divider'<% end %>>
		<%= render :partial => 'pages/show_page', :locals => { :page=>@page } %>
	</div>
<% else %>
	<div class='safe_page'>
		This section is under construction.
	</div>
<% end %>