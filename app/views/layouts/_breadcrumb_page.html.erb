<!--Used by layout; requires variable page_id and section_name-->
<% if page_id == -1 %> <!--display name of first page in section-->
	<% section = Section.find_by_name(section_name) %>
	<% unless section.nil? || section.pages.empty? || section.pages.nil? %>
	<b><%= section.pages.first.name %></b>
	<% end %>
<% else %>
	<b><%= Page.find(page_id).name %></b>
<% end %>

