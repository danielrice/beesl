<!--admin/pages/index-->
<div class='classic'>
	<%= link_to "New page >>", new_admin_page_path, :class=>"jqButton right" %>
	<h3>All Pages</h3>

	<table>
		<tr>
			<th>Name</th>
			<th>Section</th>
			<th>Options</th>
		</tr>

	<% @pages.each do |page| %>
		<tr>
			<td><%= page.name %></td>
			<td><%= page.section.name %></td>
			<td>
				<%= link_to 'Edit', edit_admin_page_path(page) %> | 
				<%= link_to 'Delete', admin_page_path(page), :confirm => 'Are you sure?', :method => :delete %>
			</td>
		</tr>
	<% end %>
	</table>
	
</div>
<%= link_to "<< Back to general controls", '/admin' %>