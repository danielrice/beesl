<!--sections/_sidebar-->
<div id='sidebar_div' class='span-3'>
	<ul class='sidebar_list'>
	<% for some_page in section.pages %>
		<% if page == some_page %>
			<li><%= link_to "#{some_page.name}", admin_page_path(some_page), :remote => true, :class=>"selected" %></li>
		<% else %>
			<li><%= link_to "#{some_page.name}", admin_page_path(some_page), :remote => true %></li>
		<% end %>
		<hr/>
	<% end %>
	</ul>
</div>